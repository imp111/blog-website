@model IEnumerable<Blog_Website.Models.Post>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container p-3">
         <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Posts: </h2>
            </div>
        </div>

        <br />

        @if (Model.Count() > 0)
        {
            @foreach (var post in Model)
            {
                <a class="text-decoration-none" asp-route-Id="@post.Id" asp-area="" asp-controller="Home" asp-action="Delete">
                    <div class="card mb-3" style="max-width: 100%; cursor: pointer;">
                        <div class="row g-0">

                            <div class="col-md-8">
                                <div class="card-body">
                                    <h2 class="card-title">@post.Title</h2>
                                    <p class="card-text">@post.Body</p>
                                    <p class="card-text" asp-route-Id="@post.Id"><small class="text-muted">@post.Created</small></p>
                                    <a class="btn btn-primary" asp-route-Id="@post.Id" asp-area="" asp-controller="Home" asp-action="Edit">Edit</a>
                                    <a class="btn btn-danger" asp-route-Id="@post.Id" asp-area="" asp-controller="Home" asp-action="Delete">Delete</a>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <img src="/images/simple-shape-mosquito-logo-design-graphic-symbol-icon-sign-illustration-creative-idea-vector.jpg" class="img-fluid rounded-start" alt="photo">
                            </div>

                        </div>
                    </div>

                </a>
               
            }
        }
        else
        {
            <h1>No items created yet!</h1>
        }
    </div>
</div>