@model Blog_Website.Models.Post
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Post: </h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Body"></label>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Title" disabled class="form-control" />
                    </div>

                    <div class="col-4">
                        <input asp-for="Body" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 text-center row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>

                        <div class="col-4">
                            <a class="btn btn-success w-75" asp-controller="Home" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>