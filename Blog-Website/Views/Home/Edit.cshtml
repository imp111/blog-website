@model Blog_Website.ViewModels.PostViewModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Edit Post</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Body"></label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <input asp-for="Body" class="form-control" />
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 text-center row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>

                        <div class="col-4">
                            <a class="btn btn-danger w-75" asp-controller="Home" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
